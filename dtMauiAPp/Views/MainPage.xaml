<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dtMauiAPp.Views.MainPage"
             xmlns:viewmodel="clr-namespace:dtMauiAPp.ViewModels"
               x:DataType="viewmodel:MainPageViewModel">

    <VerticalStackLayout Margin="20">
        <HorizontalStackLayout Spacing="20">
            <Button Text="Weather" Command="{Binding GoToWeatherForecastCommand}"></Button>
            <Button Text="Logout" Command="{Binding LogoutCommand}" Background="IndianRed"></Button>
            <Label TextColor="CadetBlue" FontAttributes="Bold" Text="{Binding UserName, StringFormat='Hello {0}'}" Margin="0,0,0,0" HorizontalOptions="End"></Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
